<% content_for :header, "Dashboard" %>

<div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
  <!-- Current Instrument -->
  <div class="bg-white overflow-hidden shadow rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900">Current Instrument</h3>
      <div class="mt-2 max-w-xl text-sm text-gray-500">
        <% if @random_instrument %>
          <p><%= @random_instrument.name %></p>
        <% else %>
          <p>No instrument selected</p>
        <% end %>
      </div>
      <div class="mt-3">
        <%= link_to "Change Instrument", dashboard_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    </div>
  </div>

  <!-- Practice Streak -->
  <div class="bg-white overflow-hidden shadow rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900">Practice Streak</h3>
      <div class="mt-2 max-w-xl text-sm text-gray-500">
        <p>You're on a roll! Keep it up!</p>
      </div>
      <div class="mt-3 flex items-center">
        <span class="text-3xl font-bold text-indigo-600">7</span>
        <span class="ml-2 text-sm text-gray-500">days</span>
      </div>
    </div>
  </div>

  <!-- Total Practice Time -->
  <div class="bg-white overflow-hidden shadow rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900">Total Practice Time</h3>
      <div class="mt-2 max-w-xl text-sm text-gray-500">
        <p>This week</p>
      </div>
      <div class="mt-3 flex items-center">
        <span class="text-3xl font-bold text-indigo-600">5h 30m</span>
      </div>
    </div>
  </div>

  <!-- Recent Goals -->
  <div class="bg-white overflow-hidden shadow rounded-lg sm:col-span-2">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900">Recent Goals</h3>
      <div class="mt-2 max-w-xl text-sm text-gray-500">
        <ul class="divide-y divide-gray-200">
          <li class="py-4 flex items-center justify-between">
            <div class="flex items-center">
              <input id="goal-1" name="goal-1" type="checkbox" class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded">
              <label for="goal-1" class="ml-3 block text-sm font-medium text-gray-700">Learn C major scale</label>
            </div>
            <span class="text-sm text-gray-500">2 days left</span>
          </li>
          <li class="py-4 flex items-center justify-between">
            <div class="flex items-center">
              <input id="goal-2" name="goal-2" type="checkbox" class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded">
              <label for="goal-2" class="ml-3 block text-sm font-medium text-gray-700">Practice chord transitions</label>
            </div>
            <span class="text-sm text-gray-500">5 days left</span>
          </li>
        </ul>
      </div>
      <div class="mt-3">
        <%= link_to "View All Goals", "#", class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" %>
      </div>
    </div>
  </div>

  <!-- Quick Practice -->
  <div class="bg-white overflow-hidden shadow rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900">Quick Practice</h3>
      <div class="mt-2 max-w-xl text-sm text-gray-500">
        <p>Start a quick practice session</p>
      </div>
      <div class="mt-3">
        <%= link_to "Start Practice", "#", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
      </div>
    </div>
  </div>
</div>
